<Window x:Class="Devhus.DownloadService.Wpf.FileAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Devhus.DownloadService.Wpf"
        mc:Ignorable="d"
        Closing="Window_Closing"
        Title="File Add" Height="256" Width="656" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid Margin="24">

        <StackPanel>
            <Label>File Url</Label>
            <TextBox x:Name="InputFileUrl" Padding="4" Height="30" Margin="0,0,0,8" Text="http://speedtest.tele2.net/100MB.zip"></TextBox>
            <TextBlock x:Name="StatusMessage">Waiting...</TextBlock>
        </StackPanel>
        
        
        <Button x:Name="BtnAddFile" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Padding="8, 4" Click="BtnAddFile_Click" VerticalAlignment="Bottom">Add File</Button>

    </Grid>
</Window>
